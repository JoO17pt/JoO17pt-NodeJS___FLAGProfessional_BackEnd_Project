                <form action="/user/login" method="POST">
                    <h5>Email Address</h5>
                    <input class="form-control" name="email" type="email" placeholder="example@example.com"><br>

                    <h5>Password</h5>
                    <input class="form-control" name="password" type="password" placeholder="******"><br>
                    <button type="submit" class="btn btn-dark btn-block">Sign In</button><br>
                    <br>
                    <p id="sign_up">Don't have an account yet? <a href="http://localhost:4000/user/register">Create Account<br></p>
                </form>
            </div>
        </div>
    </div>

